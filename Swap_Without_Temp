package Operators;

import java.util.Scanner;

public class SwapWithoutTemp {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        System.out.print("Enter first number (a): ");
        int a = sc.nextInt();
        
        System.out.print("Enter second number (b): ");
        int b = sc.nextInt();
        
        System.out.println("Sample Input: a = " + a + ", b = " + b);
        
        // Swap using arithmetic operations (addition and subtraction)
        a = a + b;  // Step 1: a now contains sum
        b = a - b;  // Step 2: b gets original a value
        a = a - b;  // Step 3: a gets original b value
        
        System.out.println("Expected Output: a = " + a + ", b = " + b);
        
        sc.close();
    }
}
